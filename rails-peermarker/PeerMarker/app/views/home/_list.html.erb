<h1>Listing essays</h1>

<table class="data_table">
  <tr>
    <th>Date</th>
    <th>Essay Text</th>
    <th>Grade</th>
    <th>Actions</th>
  </tr>

<% @essays.each do |essay| %>
  <tr class="<%= cycle("oddrowcolor","evenrowcolor") %>">
    <td><%= essay.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    <td><%= make_short(essay.essay_text) %></td>
    <td><%= not_marked(essay.grade) %></td>
    <td>
        <%= link_to 'Show', showessay_url(:id => essay) %>
    </td>
    
  </tr>
<% end %>
</table>

